{
    "properties": {
      "displayName": "App Service apps should have remote debugging turned off",
      "policyType": "BuiltIn",
      "mode": "Indexed",
      "description": "Remote debugging requires inbound ports to be opened on an App Service app. Remote debugging should be turned off.",
      "metadata": {
        "version": "2.0.0",
        "category": "App Service"
      },
      "version": "2.0.0",
      "parameters": {
        "effect": {
          "type": "String",
          "metadata": {
            "displayName": "Effect",
            "description": "Enable or disable the execution of the policy"
          },
          "allowedValues": [
            "AuditIfNotExists",
            "Disabled",
            "Audit"
          ],
          "defaultValue": "Audit"
        }
      },
      "policyRule": {
        "if": {
          "allOf": [
            {
              "field": "type",
              "equals": "Microsoft.Web/sites"
            },
            {
              "field": "kind",
              "notContains": "functionapp"
            }
          ]
        },
        "then": {
          "effect": "[parameters('effect')]",
          "details": {
            "type": "Microsoft.Web/sites/config",
            "existenceCondition": {
              "field": "Microsoft.Web/sites/config/web.remoteDebuggingEnabled",
              "equals": "false"
            }
          }
        }
      }
    },
    "type": "Microsoft.Authorization/policyDefinitions/versions",
    "name": "App Service Should have remote debugging turned off"
  }